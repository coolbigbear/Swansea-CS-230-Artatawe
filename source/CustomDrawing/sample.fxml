<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.CheckBox?>

<BorderPane fx:controller="CustomDrawing.DrawingController"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth = "400" >

    <top>
        <VBox>
            <MenuBar>
                <Menu text = "File">
                    <MenuItem text = "Save" onAction="#onSave"/>
                    <MenuItem text = "Clear" onAction="#onClear"/>
                </Menu>
            </MenuBar>

            <ToolBar>
                <HBox alignment="CENTER" spacing = "8">
                    <ColorPicker fx:id = "colorPicker"/>
                    <TextField fx:id = "brushSize" text = "10"/>
                    <CheckBox fx:id = "ovalPaint" text = "Circle Brush"/>

                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id = "canvas" width="400" height="400"/>
    </center>

</BorderPane>
